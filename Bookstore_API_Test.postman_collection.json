{
	"info": {
		"_postman_id": "bookstore-api-test-2024",
		"name": "Bookstore API Test",
		"description": "Collection để test các API endpoints và static files cho Bookstore",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. API Endpoints",
			"item": [
				{
					"name": "Get Top Rating Bookstores",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/bookstore/top-rating",
							"host": ["{{baseUrl}}"],
							"path": ["bookstore", "top-rating"]
						},
						"description": "Lấy danh sách bookstore có rating cao nhất"
					},
					"response": []
				},
				{
					"name": "Get Newcomer Bookstores",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/bookstore/newcommer",
							"host": ["{{baseUrl}}"],
							"path": ["bookstore", "newcommer"]
						},
						"description": "Lấy danh sách bookstore mới"
					},
					"response": []
				},
				{
					"name": "Get Top Freeship Bookstores",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/bookstore/top-freeship",
							"host": ["{{baseUrl}}"],
							"path": ["bookstore", "top-freeship"]
						},
						"description": "Lấy danh sách bookstore có freeship"
					},
					"response": []
				},
				{
					"name": "Get Bookstore By ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/bookstore/:id",
							"host": ["{{baseUrl}}"],
							"path": ["bookstore", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "bookstore_id_here",
									"description": "ID của bookstore"
								}
							]
						},
						"description": "Lấy thông tin chi tiết của một bookstore"
					},
					"response": []
				},
				{
					"name": "Search Bookstore By Name",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/bookstore?current=1&pageSize=10&name=abc",
							"host": ["{{baseUrl}}"],
							"path": ["bookstore"],
							"query": [
								{
									"key": "current",
									"value": "1"
								},
								{
									"key": "pageSize",
									"value": "10"
								},
								{
									"key": "name",
									"value": "abc",
									"description": "Tên bookstore để tìm kiếm"
								}
							]
						},
						"description": "Tìm kiếm bookstore theo tên"
					},
					"response": []
				},
				{
					"name": "Filter Bookstores",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/bookstore?current=1&pageSize=5",
							"host": ["{{baseUrl}}"],
							"path": ["bookstore"],
							"query": [
								{
									"key": "current",
									"value": "1"
								},
								{
									"key": "pageSize",
									"value": "5"
								}
							]
						},
						"description": "Lấy danh sách bookstore với pagination"
					},
					"response": []
				}
			],
			"description": "Test các API endpoints"
		},
		{
			"name": "2. Static Files - Images",
			"item": [
				{
					"name": "Test Bookstore Image",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/images/restaurant/bookstore1.jpg",
							"host": ["{{baseUrl}}"],
							"path": ["images", "restaurant", "bookstore1.jpg"]
						},
						"description": "Test truy cập ảnh bookstore. Thay 'bookstore1.jpg' bằng tên file thực tế từ database."
					},
					"response": []
				},
				{
					"name": "Test Book Image",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/images/menu-item/book1.jpg",
							"host": ["{{baseUrl}}"],
							"path": ["images", "menu-item", "book1.jpg"]
						},
						"description": "Test truy cập ảnh sách. Thay 'book1.jpg' bằng tên file thực tế từ database."
					},
					"response": []
				}
			],
			"description": "Test truy cập static files (ảnh)"
		},
		{
			"name": "3. Health Check",
			"item": [
				{
					"name": "Check Server Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/",
							"host": ["{{baseUrl}}"],
							"path": [""]
						},
						"description": "Kiểm tra server có đang chạy không"
					},
					"response": []
				}
			],
			"description": "Kiểm tra server status"
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://192.168.0.100:3000",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string",
			"description": "Access token (nếu cần)"
		}
	]
}

